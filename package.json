{
  "name": "node-server",
  "version": "0.0.1",
  "description": "A Node.js web server",
  "main": "src/index.js",
  "repository": "git+https://github.com/mdzhang/node-server",
  "author": "zhang.michelle.d@gmail.com",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "express": "^4.15.2",
    "lodash": "^4.17.4",
    "morgan": "^1.8.1",
    "pm2": "^2.4.2"
  },
  "scripts": {
    "build": "babel src -d dist",
    "lint": "eslint src",
